<%= simple_form_for(@appointment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :host_id, as: :hidden, input_html: { value: @host_id } %>
    <%= f.input :attendee_id, as: :hidden, input_html: { value: current_user.id }%>
    <br />TO ADD: datetimepicker (through bootstrap?)
    <br />Sample input format: <%= 1.days.from_now.to_datetime %>
    <br />
    <br />
    <%= f.input :time, as: :string%>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Request Appointment" %>
  </div>

<% end %>

