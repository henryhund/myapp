<%= simple_form_for(@skill) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :category %>
    <%= f.input :name %>
    <%= f.input :description, input_html: {rows: 5, cols: 10} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
